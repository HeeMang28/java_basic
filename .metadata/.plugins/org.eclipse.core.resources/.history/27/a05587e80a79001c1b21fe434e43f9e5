package thiskeyword;

public class Person {
	
	private String name;
	private int age;
	private int money;
	private String major;
	
	
	public Person(String n, int a, int m, String mj) {
		name = n;
		age = a;
		money = m;
		major = mj;

	}
	public void getInfo() {
		System.out.println("이름 : " + name + ", 나이 : " + age + ", 소지금액 : " + money + ", 전공 : " + major);
	} // 내부에 있는 데이터는 파란색, 받아야 할 값은 회색으로뜸

}
